<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TD2.Pages.AjoutPhotoPage">
    <ContentPage.Content>
        <AbsoluteLayout>

            <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" AbsoluteLayout.LayoutFlags="PositionProportional">

                <Label Text="Etape 1 : Choisir la photo du lieu"/>

                <Button Text="Choisir dans votre Gallerie" Command="{Binding GalleryCommand}"/>
                
                <Button Text="Prendre une nouvelle photo" Command="{Binding CameraCommand}"/>
                
                <Label Text="{Binding NomPhotoUpload}"></Label>
                
                <Button Text="Continuer " Command="{Binding NewLieuCommand}"/>


            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>